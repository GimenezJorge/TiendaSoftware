<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>La Fortaleza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaSoftware1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true" />
    <link rel="icon" href="~/assets/icono.gif" type="image/x-icon" />
    @RenderSection("Styles", required: false) <!-- Sección para estilos específicos -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid d-flex align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/logo_la_fortaleza.gif" alt="Logo" style="height: 150px; width: auto; margin-left: 30px; margin-top: 35px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto d-flex align-items-center">
                        <li class="nav-item">
                            <!--<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>-->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="GestionUsuarios">Gestionar Usuarios</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto d-flex align-items-center">
                        
                        @if (Context.Session.GetString("email") != null)
                        {
                            <div class="user-info text-center">
                                <!-- Nuevo contenedor para los datos del usuario -->
                                <div class="logout">
                                    <a class="nav-link" asp-action="Logout" asp-controller="Home">Salir</a>
                                </div>
                                <div class="user-details">
                                    <!--<span class="nav-link">-->
                                        <strong class="nombre-usuario">@Context.Session.GetString("nombre")</strong>

                                        
                                        <!--
                                        <small>@Context.Session.GetString("email")</small>
                                        -->
                                    <!--</span>-->
                                </div>

                            </div>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Signup">Registrarse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Ingresar</a>
                            </li>
                        }
                        <img src="~/assets/tipito_mago.png" alt="Logo" style="height: 150px; width: auto; margin-left: 30px; margin-top: 0px;">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div style="height: 50px;"></div> <!-- Espacio vacío para separar el footer -->

    <footer>
        <div class="container">
            &copy; 2024 - TiendaSoftware1 - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Sobre Nosotros</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>