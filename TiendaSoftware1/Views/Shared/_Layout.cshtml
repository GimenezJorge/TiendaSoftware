<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>La Fortaleza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaSoftware1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true" />
    <link rel="icon" href="~/assets/icono.gif" type="image/x-icon" />
    @RenderSection("Styles", required: false) <!-- Sección para estilos específicos -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid d-flex align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/logo_la_fortaleza.png" alt="Logo" class="logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto d-flex align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Comunidad">Comunidad</a>
                        </li>
                    </ul>

                    <!-- Aquí agregamos la información del usuario y el carrito -->
                    <div class="d-flex align-items-center ms-auto">
                        <!-- Menú de Admin si es un administrador -->
                        @if (Context.Session.GetString("roleId") == "2")
                        {
                            <div class="dropdown me-3">
                                <button class="dropdown-toggle" type="button" id="adminMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="adminMenuButton">
                                    <li><a class="dropdown-item" href="/Home/GestionUsuarios">Gestionar Usuarios</a></li>
                                    <li><a class="dropdown-item" href="/Home/GestionProductos">Gestionar Productos</a></li>
                                </ul>
                            </div>
                        }

                        <!-- Mostrar las opciones de Login y SignUp si el usuario no está autenticado -->
                        @if (Context.Session.GetString("email") == null)
                        {
                            <a class="nav-link" href="/Home/SignUp">SignUp</a>
                            <a class="nav-link" href="/Home/LogIn">Login</a>
                        }
                        else
                        {
                            <!-- Mostrar el nombre del usuario -->
                            <strong class="nombre-usuario me-3">@Context.Session.GetString("nombre")</strong>

                            <!-- Botón de logout -->
                            <div class="logout me-3">
                                <a class="nav-link" href="/Home/Logout">Salir</a>
                            </div>
                        }

                        <!-- Botón del carrito -->
                        <div id="cart-icon" class="ms-3">
                            <a href="/Carrito/Carrito" class="nav-link">
                                <img src="~/assets/carrito.png" alt="Carrito" style="width: 40px; height: 40px; cursor: pointer;">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div style="height: 50px;"></div> <!-- Espacio vacío para separar el footer -->

    <footer>
        <div class="container">
            &copy; 2024 - TiendaSoftware1 - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Sobre Nosotros</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
